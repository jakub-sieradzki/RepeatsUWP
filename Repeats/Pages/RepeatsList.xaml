    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush x:Key="MyAcrylicBrushRList"
            BackgroundSource="HostBackdrop"
            TintColor="#247EE6"
            TintOpacity="0.1"
            FallbackColor="White"/>
                    <AcrylicBrush x:Key="MyAcrylicBrushTestList"
            BackgroundSource="HostBackdrop"
            TintColor="#247EE6"
            TintOpacity="0.4"
            FallbackColor="White"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource MyAcrylicBrushRList}">


        <GridView x:Name="GridRepeats" Margin="4,0,0,0"  IsItemClickEnabled="True" ItemClick="ItemClick_Click">
            <GridView.Header>
                <Grid x:Name="MyHeaderGrid">
                    <RelativePanel Height="200" Background="{ThemeResource MyAcrylicBrushRList}">
                        <TextBlock Text="Witaj w Repeats!" FontSize="40" RelativePanel.AlignBottomWithPanel="True" Margin="20,-46,-3,70" Foreground="White"/>
                        <!--<RelativePanel RelativePanel.AlignBottomWith="image">
                            <TextBlock Text="Nazwa projektu"/>
                            <TextBlock Text="Data modyfikacji" RelativePanel.AlignVerticalCenterWithPanel="True" VerticalAlignment="Center"/>
                        </RelativePanel>-->
                        <Button RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Margin="20,-46,20,70" Background="{x:Null}" Click="AddClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE109;" FontSize="25" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                                <TextBlock Text="  Dodaj" FontSize="18" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </RelativePanel>
                </Grid>
            </GridView.Header>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <RelativePanel 
                        Height="200" 
                        Width="150"
                        Background="{ThemeResource MyAcrylicBrushTestList}">
                        <PersonPicture 
                            x:Name="Person"
                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                            Margin="0,20,0,0"
                            FontSize="10"
                            Height="70"
                            ProfilePicture="ms-appx:///Assets/new logo2.png"/>
                        <TextBlock 
                            Text="Nazwa zestawu"
                            TextWrapping="Wrap"
                            FontSize="18" 
                            Name="SetName"
                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                            RelativePanel.Below="Person"
                            Margin="0,20"/>
                        <!--<Rectangle 
                            Width="80" 
                            Height="1" 
                            RelativePanel.Below="SetName"/>-->
                        <TextBlock 
                            Name="ModifiDate" 
                            Text="12.05.2018" 
                            FontSize="14" 
                            RelativePanel.AlignBottomWithPanel="True"
                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                            Margin="0,0,0,5"/>
                    </RelativePanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <!--<StackPanel>
            <RelativePanel Margin="0,0,0,0">
