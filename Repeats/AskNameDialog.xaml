<ContentDialog
    x:Class="Repeats.AskNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Repeats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Name="content"
    Title=""
    PrimaryButtonText=""
    SecondaryButtonText=""
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    PrimaryButtonStyle="{StaticResource ButtonRevealStyle}"
    SecondaryButtonStyle="{StaticResource ButtonRevealStyle}">

    <Grid>
        <RelativePanel>
            <TextBox Name="ProjectName" TextChanged="changed_text" MinWidth="280"/>
            <TextBlock Name="ERROR" RelativePanel.Below="ProjectName" Foreground="Red"/>
        </RelativePanel>

    </Grid>
</ContentDialog>
